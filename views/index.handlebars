<div class="row">
	<div class="col-lg-3"></div>
	<div class="col-lg-3">
		<ul>
			{{#each burgers}}
				{{#if this.devoured}}
					<li>
						<p>
							{{this.id}}. {{this.burger_name}}
							<form action="/{{this.id}}?_method=PUT" method="POST">
								<input type="hidden" name="id" value="{{this.id}}">
								<button type="submit">Devour!</button>
							</form>
						</p>
					</li>
				{{/if}}
			{{/each}}
		</ul>
	</div>
