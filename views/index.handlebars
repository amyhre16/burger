<div class="row">
	<div class="col-lg-3"></div>
	<div class="col-lg-3">
		<ol>
			{{#each burgers}}
				{{#unless this.devoured}}
					<li>
						<p>
							{{this.burger_name}}
							<form action="/?_method=PUT" method="POST">
								<input type="hidden" name="id" value="{{this.id}}">
								<button class="btn btn-warning" type="submit">Devour!</button>
							</form>
						</p>
					</li>
				{{/unless}}
			{{/each}}
		</ol>
	</div>
	<div class="col-lg-6">
		<ol>
			{{#each burgers}}
				{{#if this.devoured}}
					<li>
						<p>
							{{this.burger_name}}
							<form action="/{{this.id}}?_method=PUT" method="POST">
								<input type="hidden" name="id" value="{{this.id}}">
							</form>
						</p>
					</li>
				{{/if}}
			{{/each}}
		</ol>
	</div>
</div>